<% content_for :title, "Projects" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Projects</h1>
    <%= link_to "New project", new_admin_project_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="admin_projects" class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0 5 lg:mx-0 5">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-y-auto">
          <% if @admin_projects.any? %>
            <%= render "project", admin_projects: @admin_projects %>
          <% else %>
            <p class="text-center my-10">No projects found.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


